root = true

[*]
end_of_line = lf
charset = utf-8

[{.editorconfig,.gitignore,Pipfile,Dockerfile,.style.yapf,mypy.ini,pylintrc}]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab

[*.{toml,md,sh,Dockerfile}]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab

[*.py]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120

[*.yml]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
